html,
body {
  height: 100%;
  font-family: 'Lato';
  font-weight: 300;
}

.body-container {
  margin-left: 0px;
  margin-right: 0px;
  height: 100%;
}

a {
  color: #222222;
}

a:hover {
  text-decoration: none;
}

.left-arrow-container,
.right-arrow-container {
  text-align: center;
  padding-top: 60px;
}

/* ----------- navbar ----------- */

.navbar-container {
  z-index: 3;
  position: fixed;
  background-color: white;
  opacity: 0.97;
}

.navbar-container,
.left-navbar,
.right-navbar,
.navbar-brand-container {
  height: 80px;
}

.navbar-container,
.left-navbar,
.right-navbar {
  padding-left: 0px;
  padding-right: 0px;
}

.navbar-brand-container {
  padding-top: 30px;
  border-bottom: 1px solid #E08283;
}

.logo:hover {
  color: #D24D57;
}

.menu-btn {
  background-color: #D24D57;
  text-align: left;
  height: 100%;
  border-radius: 0px;
  border: none;
}

.btn:focus, .btn:active:focus, .btn.active:focus {
  outline: none;
}

/* ------ menu ------ */

#menu {
  background-color: #D24D57;
  height: 100%;
  z-index: 2;
  position: fixed;
  padding-top: 100px;
  opacity: 0.97;
}

.menu-item {
  font-size: 40px;
}

.menu-item,
.menu-item a,
.menu-info-item,
.menu-btn,
.social-link:hover {
  color: #222222;
}

.menu-item,
.menu-info-item {
  list-style-type: none;
}

.logo,
.navbar-text,
.menu-info-item {
  font-size: 15px;
}

.menu-info-item {
  padding-top: 8px;
}

/* ----------- works#home ----------- */

.header-container {
  padding-top: 80px;
  height: 100%;
  background: url('<%= asset_path("homepage_background.jpg") %>') no-repeat left center;
  background-size: cover;
}

.jumbotron {
  height: 400px;
  background: transparent;

}

#page-header {
  font-size: 3em;
  color: #D24D57;
}

.container p,
.footer p {
  color: white;
}

.footer {
  position: absolute;
  bottom: 0;
}
/* ----------- works#design ----------- */

.design-container {
  padding-top: 80px;
  padding-left: 0px;
  padding-right: 0px;
  margin-left: 0px;
  margin-right: 0px;
}

.piece-container {
  height: 400px;
  z-index: 1;
  text-align: center;
  padding-top: 120px;
}

.piece-header {
  color: #222222;
}

.piece-btn {
  border: 1px solid #D24D57;
  border-radius: 100%;
  width: 175px;
  height: 175px;
  text-align: center;
  margin-left: auto;
  margin-right: auto;
  opacity: 0.7;
  background-color: transparent;
}

#piece1 {
  background: url('<%= asset_path("zeto.png") %>') no-repeat left center;
  background-size: cover;
}

#piece2 {
  background: url('<%= asset_path("sixtwelve2.png") %>') no-repeat left center;
  background-size: cover;
}

.test-row {
  background-color: orange;
  height: 100%;
}

.test-div1 {
  background-color: tomato;
  z-index: 1;
  position: fixed;
}

.test-div2 {
  z-index: 0;
  background-color: lightblue;
}

.piece-img1-container {
  background: url('<%= asset_path("zeto.png") %>') no-repeat left center;
  background-size: cover;
  height: 500px;
}

.piece-img1-container {
  background: url('<%= asset_path("sixtwelve.png") %>') no-repeat left center;
  background-size: cover;
  height: 500px;
}

.piece-img1-container {
  background: url('<%= asset_path("sixtwelve2.png") %>') no-repeat left center;
  background-size: cover;
  height: 500px;
}
/* ----------- works#about ----------- */

.about-container {
  padding-top: 80px;
  padding-left: 0px;
  padding-right: 0px;
  margin-left: 0px;
  margin-right: 0px;
  z-index: -1;
}

.page-header-container {
  text-align: center;
  z-index: -1;
}

.about-summary-container {
  text-align: center;
  padding-top: 30px;
  height: 800px;
}

.about-summary-container p {
  text-align: justify;
}

.portrait {
  border: 1px solid #D24D57;
  height: 300px;
  width: 300px;
}

.paragraph-link {
  text-decoration: underline;
  color: #D24D57;
}

.grid-text {
  color: white;
}

.grid1,
.grid2,
.grid3,
.grid4,
.grid5,
.grid6,
.grid7,
.grid8,
.grid9 {
  height: 100px;
  text-align: center;
  padding-top: 40px;
}

.grid1 {
  background-color: #DB0A5B;
}

.grid2 {
  background-color: #F64747;
}

.grid3 {
  background-color: #F1A9A0;
}

.grid4 {
  background-color: #E08283;
}

.grid5 {
  background-color: #D2527F;
}

.grid6 {
  background-color: #D24D57;
}

.grid7 {
  background-color: #EF4836;
}

.grid8 {
  background-color: #D91E18;
}

.grid9 {
  background-color: #C0392B;
}

/* ----------- works#contact ----------- */
.contact-container {
  padding-top: 80px;
  padding-left: 0px;
  padding-right: 0px;
  margin-left: 0px;
  margin-right: 0px;
}

#map {
  position:absolute;
  top:0;
  bottom:0;
  width:100%;
}

.map-container,
.contact-info-container {
  z-index: 0;
  height: 400px;
}

.map-container {
  padding-left: 0px;
}

.contact-info-container {
  background-color: lightblue;
}

/* ----------- icons ----------- */

.marker-img,
.email-img,
.phone-img {
  height: 25px;
  width: 25px;
}

.twitter-img,
.linkedin-img,
.github-img {
  height: 30px;
  width: 30px;
}

.list-img {
  height: 40px;
  width: 40px;
}

.arrow-img {
  height: 50px;
  width: 50px;
}

